<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:id="@+id/background_shape">
        <shape android:shape="rectangle">
            <solid android:color="#95e5cd" />
            <corners android:radius="35dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Dotted border -->
    <item android:id="@+id/dotted_border_shape">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/text_color"
                android:dashGap="3dp"
                android:dashWidth="3dp" />
            <corners android:radius="35dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Icon -->
    <item android:id="@+id/icon_shape">
        <bitmap
            android:src="@drawable/ic_copy"
            android:gravity="start"
            android:layout_marginStart="16dp" />  <!-- Adjust margin as needed -->
    </item>
</layer-list>
